<?xml version="1.0" encoding="iso-8859-1"?>
<odoo>
	<data>
		<record id="product_template_form_view_inherit_mir" model="ir.ui.view">
			<field name="name">product.template.form.inherit_mir</field>
			<field name="model">product.template</field>
			<field name="priority">3</field>
			<field name="inherit_id" ref="ariis.product_template_form_view_inherit" /> 
			<field name="arch" type="xml">
				<xpath expr="//page[@name='ariis_ProductTemplate']" position="after">  
					<page string="Suministros" name="mir_product_suministro"  invisible="mir==False"   >
						<field name="product_suministros" options="{'always_reload': True , 'no_create': True }"  >
							<tree default_order="numero,tipo"  >
								<field name="numero" />
								<field name="tipo" />
								<field name="color"  />									
								<field name="product_original"/>
								<field name="product_suministro"/>					
							</tree>
						</field>  
					</page>					
				</xpath>
			</field>
		</record>
	</data>
</odoo>