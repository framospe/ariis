<?xml version="1.0" encoding="utf-8" ?>
<odoo>
 
     <record id="hr_equipment_view_form" model="ir.ui.view">
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='addlecturamir']" position="after">
               <button	
                    name="addreparacion"
                    groups="ariis.ariis_grupo_responsable,ariis.ariis_grupo_gestion,ariis.ariis_grupo_tecnico" 
                    type="object" 
                    string="AÃ±adir Servicio" 
                    class="oe_highlight"   
                /> 
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                 <button  
                    type="action" name="%(repair.action_repair_order_tree)d"
                    class="oe_stat_button" 
                    invisible="repair_ids_count==0"
                    context="{
                            'search_default_active'         : True, 
                            'search_default_dispositivo_id' : active_id,
                            'search_default_partner_id'     : partner_id, 
                            'default_partner_id'            : partner_id, 
                            'default_dispositivo_id'        : active_id 
                            }" 
                    icon="fa-gears">
                    <field  name="repair_ids_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
 

</odoo>
