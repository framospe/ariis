<odoo>
	<data>
	
		<record id="product_template_search_view_ariis" model="ir.ui.view">
			<field name="name">product.template.ariis.search</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_search_view" /> 
			<field name="arch" type="xml">
				<xpath expr="/search/filter[@name='consumable']" position="after">
					<filter string="Impresoras MIR" name="mirs" domain="[('mir','=',True)]"/>
				</xpath>
			</field>
		</record>
	
		<record id="product_template_form_view_inherit" model="ir.ui.view">
			<field name="name">product.template.form.inherit.ariis</field>
			<field name="model">product.template</field>
			<field name="priority">3</field>
			<field name="inherit_id" ref="product.product_template_form_view" /> 
			<field name="arch" type="xml">
				<xpath expr="//notebook[last()]" position="inside">
					<page string="Ariis" name="ariis_ProductTemplate" invisible="mir==False">
						<group>
							<group>
								 <field name="ariis_id"  />
								 <field name="mir" string="Monitorizable" />
								 <!-- <field name="analytic_tag_id" string="Etiqueta Analitica" /> -->
							</group>
							<group >
								<field name="iscolor" string="Color"/>
								<field name="iscopiadora" string="Copiadora"/>
								<field name="isscanner" 	string="Escaner"/>
								<field name="isfax" string="Fax"/>
							</group>
						</group> 
					</page>					
				 </xpath>  
			</field>
		</record>
